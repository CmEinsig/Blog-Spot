<div class="center">
    <button class="button" id="login"> Login</button>
    <button class="button" id="signup"> Signup</button>
</div>

<div class="container is-one-third" id="loginForm" style="display: none">
    <h1 style="text-align:center; font-size:30px; padding:1rem;">Login</h1>
    <form style="margin:2rem">
        <div class="field">
            <label class="label">Username</label>
            <div class="control">
                <input class="input" id="username-login" type="text">
            </div>
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" id="email-login" type="email">
            </div>
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control">
                <input class="input" id="password-login" type="password">
            </div>
        </div>
        <div class="center">
            <button class="button" id="loginSubmit"><i class="fa-solid fa-check"></i>Submit</button>
        </div>

    </form>
</div>

<div class="container is-one-third" id="signupForm" style="display:none">
    <h1 style="text-align:center; font-size:30px; padding:1rem;">Sign Up</h1>
    <form style="margin:2rem">
        <div class="field">
            <label class="label">Username</label>
            <div class="control">
                <input class="input" id="username-signup" type="text">
            </div>
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" id="email-signup" type="email">
            </div>
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control">
                <input class="input" id="password-signup" type="password">
            </div>
        </div>

        <div class="center">
            <button class="button" id="signup-submit">Submit</button>
        </div>

    </form>
</div>

<script src="/js/login.js"></script>